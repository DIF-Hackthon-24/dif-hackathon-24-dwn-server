{
  "compilerOptions": {
    "lib": ["DOM", "ES6"],
    "allowJs": true,
    "target": "ESNext",
    "module": "NodeNext", // Required for enabling JavaScript import assertion support
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "./dist/esm",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
